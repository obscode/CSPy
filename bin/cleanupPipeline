#!/bin/bash

# Tidy things up, removing un-needed intermediate files, once we're sure things
# went well. Basically make a folder with what we want to keep and delete
# everything else

# calibrations and log
mkdir FinalProducts
mv Zero*.fits FinalProducts
mv SFlat*.fits FinalProducts
mv pipeline.log FinalProducts
mv *.cfg FinalProducts
mv *.txt FinalProducts

# Flat-fielded and mosaic'ed products
mv fcd????c?.fits FinalProducts
mv fcd????c?_sigma.fits FinalProducts
mv fcd????c1-4.fits FinalProducts
mv fcd????c1-4_sigma.fits FinalProducts

# CSP named files
mv *_SWO_NC*[0-9].fits FinalProducts
mv *_SWO_NC*[0-9]_sigma.fits FinalProducts

# The actual cleanup
rm *
mv FinalProducts/* .
rmdir FinalProducts